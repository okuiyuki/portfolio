<% if current_user.already_likes?(post) %>
        <%= link_to post_like_path(post_id: post.id, id: post.id), method: :delete, remote: true  do %>
                <span class="like-text">いいね!</span> <i class="fa fa-heart unlike-btn"></i>
        <% end %>
<% else %>
        <%= link_to post_likes_path(post_id: post.id), method: :post, remote: true do %>
                <span class="like-text">いいね!</span><i class="fa fa-heart like-btn"></i>
        <% end %>
<% end %>


<span class="like-count"><%= post.likes.count %></span>

