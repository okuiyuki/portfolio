<%# プロフィール画像　%>
<div class="row">
    <div class="col-sm-1">
        <%= image_tag @user.image, size: '100x100', class: "rounded-circle" %>
    </div>
    <div class="col m-auto pl-5">
        <div class="user-name">
            <%= @user.name %>
        </div>
    </div>
    <% if current_user == @user %>
    <div class="col m-auto text-right">
        <%= link_to edit_user_path do %>
            <i class="fa fa-cog fa-2x setting-icon"></i>
        <% end%>
    </div>
    <% end %>
</div>


<div class="row justify-content-center mt-5 mb-5">
    <div class="col-sm-5">
        <p class="h2 heading-text">投稿したポートフォリオ</p>
    </div>
</div>

<% if @user.posts.any? %>
    <%= render @posts %>
<% else %>
    <p>まだポートフォリオを投稿していません</p>
    <%= link_to '早速投稿してみる', new_post_path %>
<% end %>