<%# プロフィール画像　%>
<div class="row">
    <div class="col-sm-1">
        <%= image_tag @user.image, size: '100x100', class: "rounded-circle" %>
    </div>
    <div class="col m-auto pl-5">
        <div class="user-name">
            <%= @user.name %>
        </div>
    </div>
    <% if current_user == @user %>
    <div class="col m-auto text-right">
        <%= link_to edit_user_path do %>
            <span class="set-text">設定</span><i class="fa fa-cog fa-2x"></i>
        <% end%>
    </div>
    <% end %>
</div>


<h3 class="pt-3 pb-3">投稿したポートフォリオ一覧</h2>

<% if @user.posts.any? %>
    <%= render @posts %>
<% else %>
    <p>まだポートフォリオを投稿していません</p>
    <%= link_to '早速投稿してみる', new_post_path %>
<% end %>