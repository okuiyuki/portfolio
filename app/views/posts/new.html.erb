<div class="row justify-content-center">
    <div class="col-sm-3">
        <p class="h2 mb-5 heading-text">新規投稿</p>
    </div>
</div>
<%= form_with(model: @post, local: true) do |f| %>
    <%= render "shared/error_messages", object: f.object%>

    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "※必須" %>
    </div>

    <div class="form-group mt-5">
        <%= f.label :category_id, "カテゴリ"%>
        <%= f.select :category_id, Category.all.map { |o| [o.name, o.id]}, class: "form-control"%>
    </div>

    <div class="form-group mt-5">
        <%= f.label :tag_ids, "タグ" %>
        <%= f.text_field :tag_ids, class: "form-control", placeholder: "複数タグをつける際は`,`で区切ってください"%>
    </div>

    <div class="form-group mb-4 mt-5">
        <%= f.label :discription %>
        <%= f.text_area :discription, class: "form-control", rows: "3", placeholder: "※必須
機能や使用技術を書くと検索してもらいやすくなります" %>
    </div>

    <div class="form-group mt-5">
        <%= f.label :images, 'イメージ画像' %>
        <%= f.file_field :images, multiple: true, class: "form-control-file" %>
    </div>

    <div class="form-group mt-5">
        <%= f.label :github_url %>
    <%= f.url_field :github_url, class: "form-control" %>
    </div>

    <div class="form-group mt-5">
        <%= f.label :app_url %>
        <%= f.url_field :app_url, class: "form-control"%>
    </div>

    <div class="form-group mt-5">
        <%= f.submit '投稿', class: "btn btn-info form-control mb-5"%>
    </div>
    
<% end %>