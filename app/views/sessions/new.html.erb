<%= form_with(url: login_path, scope: :session, local: true ) do |f| %>

<%= f.label :email, 'メールアドレス' %>
<%= f.email_field :email %>

<%= f.label :password, 'パスワード' %>
<%= f.password_field :password %>

<%= f.submit 'Login'%>

<%= f.label :remember_me  do %>
    <%= f.check_box :remember_me %>
    <span>次回から自動ログイン</span>
<% end %>
<% end %>